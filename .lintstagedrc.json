{
  "linters": {
    "docs/**": [
      "yarn lint:text",
      "yarn lint:text --fix",
      "git add"
    ],
    "**/*.ts{,x}": [
      "yarn lint:js --fix",
      "yarn lint:sc",
      "git add"
    ],
    "**/*.{css,scss,html}": [
      "yarn lint:css --fix",
      "git add"
    ],
    "**/*.test.ts{,x}": [
      "yarn coverage",
      "git add"
    ]
  },
  "ignore": [
    "/config/**/*.js",
    "/node_modules/**/*.ts"
  ]
}
